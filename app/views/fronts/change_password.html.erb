<div class="editablebox">
<div class="changepswrd">
<h3><%= t("general.change_my_password") %></h3>
<div class="errormsg">
  <% flash.each do |name, msg| %>
	<%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>
</div>
<%= form_for @user, :url => change_password_path, :method => :put do |f| %>

  <%= f.label :password %>
  <%= f.password_field :password %>
  
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br />
  
  <%= f.submit "Update my password" %>
  <div class="cl"></div>
<% end %>
</div>
</div>


