<div id="stepcontent3" style="display:none;padding: 10px 10px 10px 10px;">
<legend>Shared Other User Todos:</legend>
	<% if flash[:completed_todo] %>
		<div class="alert alert-success">
			<%= flash[:completed_todo] %>
		</div>
	<% end %>
<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th width="20%"><%= t("title") %></th>
	<th width="20%"><%= t("created_at") %></th>
	<th width="10%"><%= t("actions") %></th>
  </tr>
</table>

  <% @all_shared_todos.each do |id, todos| %>

	<h5><%= id if todos.count > 0 %></h5>
	<table class="table table-striped table-bordered table-condensed">
	  	<% for o_row in todos %>
		<tr>
		  <td><%= o_row.title %></td>
		  <td><%= o_row.created_at.to_s(:pretty) %></td>
		  <td>
			<%= link_to "Make it completed", make_completed_path(o_row.id, 'three'), :confirm => 'Are you sure to make it completed ?', :remote => true %>
  		  </td>
		</tr>
		<% end %>

	</table>
  <% end %>
</div>
