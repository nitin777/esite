<div id="stepcontent1" style="display:block;padding: 10px 10px 10px 10px;">
<legend>Pending Tasks:</legend>
	<% if flash[:completed_todo] %>
		<div class="alert alert-success">
			<%= flash[:completed_todo] %>
		</div>
	<% end %>
<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th width="20%"><%= sortable "title", t("title") %></th>
	<th width="20%"><%= sortable "created_at", t("created_at") %></th>
	<th width="10%"><%= t("actions") %></th>
  </tr>
  <% for o_row in @o_all_pending %>
    <tr>
      <td><%= o_row.title %></td>
      <td><%= o_row.created_at.to_s(:pretty) %></td>
      <td> 
		<%= link_to 'Edit', edit_todo_path(o_row), :remote => true %>
		<%= link_to 'Delete', destroy_todo_path(o_row.id), :confirm => 'Are you sure to delete ?', :remote => true %>
		<%= link_to "Done", make_completed_path(o_row.id, 'one'), :confirm => 'Are you sure to make it completed ?', :remote => true %>
		</td>
    </tr>
  <% end %>
</table>
<%= will_paginate @o_all_pending %>

</div>

