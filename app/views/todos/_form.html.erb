<div class="editablebox">
<%= form_for @o_single do |f| %>
  <%#= f.error_messages %>
  <div class="field">
    <%= f.label "title" %>
    <%= f.text_field :title %>
	<span><% if @o_single.errors[:title].any? %>
		<%= t('filed_required') %></span>
	<% end %>
  </div>
  <div class="field">
    <%= f.label "description" %>
    <%= f.text_area :desc %>

  </div>
  <p><%= f.submit :value => t("save") %>
<div class="btn"><%= link_to "back", todos_path %></div>
</p>
<% end %>

<div class="cl"></div>
</div>
