<div class="editablebox" style="display:none" id="addform">

<%= form_for(@o_single, :url => add_todo_path, :remote => true) do |f| %>
  <div class="field">
	<input type="hidden" name="todo[user_id]" value="<%= current_user.id %>" />
    <%= f.label t("title") %>
    <%= f.text_field :title %>
	<span><% if @o_single.errors[:title].any? %>
		<%= t('filed_required') %></span>
	<% end %>
  </div>

  <p><%= f.submit :value => "save", :name => 'save' %>
	<%= link_to "close", "#", :id => 'closelink' %>
</p>
<% end %>

<div class="cl"></div>
</div>
