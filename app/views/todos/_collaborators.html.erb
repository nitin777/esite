<div id="stepcontent4" style="display:none;padding: 10px 10px 10px 10px;">
<legend>Collaborators:</legend>
	<% if flash[:completed_todo] %>
		<div class="alert alert-success">
			<%= flash[:completed_todo] %>
		</div>
	<% end %>
<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th width="20%"><%= "Users" %></th>
	<th width="20%"><%= t("created_at") %></th>
	<th width="10%"><%= t("actions") %></th>
  </tr>
  <% for o_row in @collaborators %>
    <tr>
      <td><%= o_row.get_user_email(o_row['share_user_id']) %></td>
      <td><%= o_row['created_at'].to_s(:pretty) %></td>
      <td>
		<%= link_to "Stop Sharing", stop_share_list_path(o_row['id']), :confirm => 'Are you sure to stop sharing list for this user?', :remote => true %>
		</td>
    </tr>
  <% end %>
</table>

</div>

