  <div class="field">
    <%= f.label t("general.first_name") %>
    <%= f.text_field :first_name %>
	<span><% if @user.errors[:first_name].any? %>
		<%= t(@user.errors[:first_name].first) %></span>
	<% end %>
  </div>

  <div class="field">
    <%= f.label t("general.last_name") %>
    <%= f.text_field :last_name %>
	<span><% if @user.errors[:last_name].any? %>
		<%= t(@user.errors[:last_name].first) %></span>
	<% end %>
  </div>

  <div class="field">
    <%= f.label t("general.email") %>
    <%= f.text_field :username %>
	<span>
		<% if @user.errors[:username].any? %>
			<%= t(@user.errors[:username].first) %>
		<% end %>
	</span>
  </div>



  <div class="field">
    <%= f.label t("general.password") %>
    <%= f.password_field :password %>
	<span><% if @user.errors[:password].any? %>
		<%= t(@user.errors[:password].first) %></span>
	<% end %>
  </div>
    </div>
<div class="admintextbox-leftpart ">
  <div class="field">
      <%= f.label t("general.password_confirmation") %>
      <%= f.password_field :password_confirmation %>
	<span><% if @user.errors[:password_confirmation].any? %>
		<%= t(@user.errors[:password_confirmation].first) %></span>
	<% end %>
    </div>

  <div class="field">
    <%= f.label t("general.contact") %>
    <%= f.text_field :contact %>
  </div>

  <div class="field">
  <div class="checkbox">
    <%= f.label t("general.user_role") %>
    <%#= f.check_box :is_admin %>
	<%= f.select :is_admin, options_for_select([[t("general.select_role"), ""], [t("general.admin"), 1], [t("general.user"), 0]], @user.is_admin)  %>
    </div>
  </div>
  <p>
    <%= f.label :is_active %>
    <%= f.check_box :is_active %>
  </p>  

  <div class="actions">
    <%= f.submit t("general.save") %>
	<div class="btn"><%= link_to t("general.back"), users_path %></div>
  </div>
<% end %>

</div>
<div class="cl"></div>
</div>
