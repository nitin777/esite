<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="pretty" width="100%">
  <tr>
    <th><%= sortable "username", t("general.username") %></th>
    <th><%= sortable "email", t("general.email") %></th>
    <th><%= sortable "contact", t("general.contact") %></th>
	<th width="20%"><%= sortable "created_at", t("general.created_at")%></th>
	<th width="5%"><%= sortable "is_active", t("general.is_active") %></th>	
	<th width="10%"><%= t("general.actions") %></th>
  </tr>
  <% for user in @users %>
    <tr>
      <td><%= user.username %></td>
      <td ><%= user.email %></td>
      <td><%= user.contact %></td>
      <td><%= user.created_at.to_s(:pretty) %></td>
      <td><%= user.is_active ? image_tag("Yes.gif") : image_tag("No.gif") %></td>      
      <td> <%= link_to image_tag("edit.png", :width => "16px", :height => "16px", :title => "Edit"), edit_user_path(user) %>
		   <%= link_to image_tag("delete.png", :width => "16px", :height => "16px", :title => "Delete"), user, :confirm => 'Are you sure?', :method => :delete %>
<%= link_to image_tag("detail-icon.png", :width => "16px", :height => "16px", :title => t("general.contents")), pages_list_path(user.id) %>		   
		</td>
    </tr>
  <% end %>
</table>

<%= will_paginate @users %>
